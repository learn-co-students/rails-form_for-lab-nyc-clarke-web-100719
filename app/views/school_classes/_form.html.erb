
<% if flash[:messages] %>
  <ul>
    <% flash[:messages].each do |message|  %>
      <li><%= message %></li>
    <% end  %>
  </ul>
<% end  %>


<%= form_for @school_class do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :room_number %>
  <%= f.text_field :room_number %>

  <%= f.submit %>
<% end %>